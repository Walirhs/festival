<div class="container">
    <div class="row">
        <div class="col-md-6 col-lg-5 login-form mx-auto float-none">

            <!--Form with header-->
            <div class="card">
                <div class="card-block">

                    <form action="{{ path("fos_user_security_check") }}" method="post">

                        <!--Header-->
                        <div class="form-header">
                            <h3><i class="fa fa-lock"></i> Identification</h3>
                        </div>

                        <!--Body-->

                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}

                        <div class="md-form">
                            <i class="fa fa-user prefix"></i>
                            <input type="text" id="username" name="_username" class="form-control" required="required" value="{{ last_username }}">
                            <label for="username">Identifiant</label>
                        </div>

                        <div class="md-form">
                            <i class="fa fa-key prefix"></i>
                            <input type="password" id="password" name="_password" class="form-control" required="required">
                            <label for="password">Mot de passe</label>
                        </div>

                        <fieldset class="form-group text-center">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" checked />
                            <label for="remember_me">Rester connecté</label>
                        </fieldset>

                        <div class="text-center">
                            <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="Connexion" />
                        </div>

                    </form>

                </div>

                <!--Footer-->
                {#<div class="modal-footer">#}
                    {#<a href="#">Mot de passe oublié ?</a> #}{# TODO : Gestion mdp oublié #}
                {#</div>#}

            </div>
            <!--/Form with header-->

        </div>
    </div>
</div>